#!/usr/bin/env python3.7
import click

TODO_PATH = "/Users/ryan.tuck/Dropbox/Apps/Todotxt+/todo.txt"


def _read():
    with open(TODO_PATH) as f:
        lines = f.readlines()
    return [x.strip() for x in lines]


@click.command('ls')
def ls():
    for line in _read():
        print(line)


@click.group()
def cli():
    pass


cli.add_command(ls)

if __name__ == '__main__':
    cli()
